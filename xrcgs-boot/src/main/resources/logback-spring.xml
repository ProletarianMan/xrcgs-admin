<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 读取 Spring Profile -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="xrcgs"/>
    <property name="LOG_PATH" value="logs/${APP_NAME}"/>

    <!-- 输出格式：时间 级别 线程 traceId logger - msg -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] traceId=%X{traceId:-} %logger - %msg%n"/>

    <!-- ============ DEV：控制台彩色 ============ -->
    <springProfile name="dev">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] traceId=%X{traceId:-} %cyan(%logger{36}) - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <logger name="com.xrcgs" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <!-- ============ PROD：按天滚动文件，保留 30 天 ============ -->
    <springProfile name="prod">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/app.log</file>
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
                <maxHistory>30</maxHistory>
                <cleanHistoryOnStart>true</cleanHistoryOnStart>
            </rollingPolicy>
        </appender>

        <logger name="com.xrcgs" level="INFO"/>
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- 本地测试 -->
    <springProfile name="local">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] traceId=%X{traceId:-} %cyan(%logger{36}) - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <logger name="com.xrcgs" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>

    <!-- ============ 可选：JSON Log（logstash-encoder） ============
    使用方法：
    1) 在 boot（或父）POM 添加依赖：
       <dependency>
         <groupId>net.logstash.logback</groupId>
         <artifactId>logstash-logback-encoder</artifactId>
         <version>7.4</version>
       </dependency>
    2) 把上面的 encoder 替换为：
       <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
         <providers>
           <timestamp/>
           <pattern>
             <pattern>
               {
                 "level":"%level",
                 "thread":"%thread",
                 "logger":"%logger",
                 "traceId":"%X{traceId:-}",
                 "message":"%message"
               }
             </pattern>
           </pattern>
           <stackTrace/>
         </providers>
       </encoder>
    ============================================================ -->
</configuration>
